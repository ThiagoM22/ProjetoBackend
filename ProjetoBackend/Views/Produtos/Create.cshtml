@model ProjetoBackend.Models.Produto

@{
    ViewData["Title"] = "Criar";
}
<div class="container">

    <p class="titulo-criar fw-bold">Prdutos</p>

    <hr class="border border-dark border-1">

    <h4 class="cadastro">Cadastro de Produtos</h4>

    <div class="row">
        <div class="col-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="text-box-container form-group mb-2">
                    <input asp-for="Nome" class="text-box-input form-control" placeholder="Nome" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-12 col-md-6 text-box-container form-group mb-2">
                        <input asp-for="Preco" class="text-box-input form-control" placeholder="Preço" />
                        <span asp-validation-for="Preco" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-md-6 text-box-container form-group mb-2">
                        <input asp-for="Estoque" class="text-box-input form-control" placeholder="Estoque" />
                        <span asp-validation-for="Estoque" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 text-box-container form-group mb-2">
                        <select asp-for="CategoriaId" class="text-box-input form-control" asp-items="ViewBag.CategoriaId"></select>
                    </div>
                </div>
            </form>
        </div>







